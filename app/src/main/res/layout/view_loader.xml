<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loader_container_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ProgressBar
        android:id="@+id/loader_pb"
        android:layout_marginTop="@dimen/margin1"
        android:layout_width="@dimen/sizePreloader"
        android:layout_height="@dimen/sizePreloader"
        android:indeterminateTint="@color/black"
        android:indeterminateTintMode="src_atop" />
    
    <TextView
        android:id="@+id/loader_message_tv"
        android:layout_marginTop="@dimen/margin2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/text3"
        android:text="@string/load_companies_text"/>

</LinearLayout>